# üåê API Configuration - API Gateway con mTLS
VITE_API_BASE_URL=https://api-staging.mtn.cl
VITE_API_GATEWAY_URL=https://api-staging.mtn.cl
VITE_API_TIMEOUT=15000

# üîê OIDC/Keycloak Configuration - Staging
VITE_OIDC_ISSUER=https://auth-staging.mtn.cl/auth/realms/mtn-admision
VITE_OIDC_CLIENT_ID=web-guardianes
VITE_OIDC_CLIENT_SECRET=
VITE_OIDC_REDIRECT_URI=https://app-staging.mtn.cl/callback
VITE_OIDC_POST_LOGOUT_REDIRECT_URI=https://app-staging.mtn.cl/
VITE_OIDC_SCOPE="openid profile email roles"
VITE_OIDC_RESPONSE_TYPE=code
VITE_OIDC_RESPONSE_MODE=query

# üé≠ Client espec√≠fico para admins
VITE_OIDC_ADMIN_CLIENT_ID=web-admin
VITE_OIDC_ADMIN_REDIRECT_URI=https://app-staging.mtn.cl/admin/callback

# üöÄ Feature Flags - Staging (todas las features habilitadas)
VITE_FEATURE_EVALUATIONS=true
VITE_FEATURE_INTERVIEWS=true
VITE_FEATURE_RBAC_ENABLED=true
VITE_FEATURE_MTLS_ENABLED=true
VITE_FEATURE_RATE_LIMITING=true
VITE_FEATURE_OBSERVABILITY=true

# üìä Observability and Monitoring - Staging
VITE_OTEL_COLLECTOR_URL=https://otel-staging.mtn.cl/v1/traces
VITE_GRAFANA_URL=https://grafana-staging.mtn.cl
VITE_JAEGER_URL=https://jaeger-staging.mtn.cl
VITE_ENABLE_PERFORMANCE_MONITORING=true

# üá®üá± Chilean Specific Configuration
VITE_TIMEZONE=America/Santiago
VITE_LOCALE=es-CL
VITE_CURRENCY=CLP
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_PHONE_FORMAT=+56-9-XXXX-XXXX

# üîí Security Configuration - Staging (nivel bancario)
VITE_SECURITY_LEVEL=staging
VITE_CSP_ENABLED=true
VITE_HTTPS_REQUIRED=true
VITE_SECURE_COOKIES=true
VITE_HSTS_ENABLED=true

# üì± Application Configuration
VITE_APP_ENV=staging
VITE_APP_VERSION=1.0.0-staging
VITE_APP_BUILD_TIME=
VITE_DEBUG_MODE=false
VITE_MOCK_DATA=false
VITE_API_MOCK=false

# üé® Theme and UI
VITE_THEME=mtn-theme
VITE_BRAND_PRIMARY=#1e40af
VITE_BRAND_SECONDARY=#dc2626
VITE_ENABLE_DARK_MODE=true

# üìß Notification Configuration
VITE_EMAIL_DOMAIN=mtn.cl
VITE_SUPPORT_EMAIL=soporte-staging@mtn.cl
VITE_NOTIFICATIONS_ENABLED=true

# üîß Staging Tools
VITE_HOT_RELOAD=false
VITE_SOURCE_MAPS=false
VITE_BUNDLE_ANALYZER=false
VITE_PERFORMANCE_BUDGET=true