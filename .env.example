# API Configuration - Backend Services
# = PRODUCTION: Use HTTPS and production domain
VITE_API_BASE_URL=http://localhost:8080
VITE_API_TIMEOUT=30000

# Authentication Configuration
# = PRODUCTION: Configure secure authentication endpoints
VITE_AUTH_LOGIN_URL=/api/auth/login
VITE_AUTH_LOGOUT_URL=/api/auth/logout
VITE_AUTH_REFRESH_URL=/api/auth/refresh

# Application Configuration
VITE_APP_NAME="MTN Admission System"
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Institution Configuration
VITE_INSTITUTION_NAME="Your Institution Name"
VITE_INSTITUTION_WEBSITE=https://www.your-institution.edu
VITE_INSTITUTION_SUPPORT_EMAIL=soporte@your-institution.edu
VITE_INSTITUTION_PHONE="+1 234 567 8900"

# File Upload Configuration
# = Adjust limits based on your requirements
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=".pdf,.doc,.docx,.jpg,.jpeg,.png"

# Feature Flags - Development Control
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_ANALYTICS=false

# OAuth/OIDC Configuration (if using external authentication)
# = PRODUCTION: Use secure OAuth provider settings
# VITE_OAUTH_CLIENT_ID=your_oauth_client_id
# VITE_OAUTH_REDIRECT_URI=https://your-domain.edu/auth/callback
# VITE_OAUTH_AUTHORITY=https://your-identity-provider.com
# VITE_OAUTH_SCOPE=openid profile email

# CDN Configuration (if using external CDN)
# = PRODUCTION: Configure CDN for static assets
# VITE_CDN_BASE_URL=https://cdn.your-institution.edu
# VITE_ASSETS_BASE_URL=https://assets.your-institution.edu

# Analytics Configuration (optional)
# = Use only if analytics is required
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Error Reporting Configuration (optional)
# = PRODUCTION: Configure error reporting service
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# VITE_ERROR_REPORTING_ENABLED=true

# Performance Monitoring (optional)
# VITE_PERFORMANCE_MONITORING=false
# VITE_API_MONITORING_ENABLED=false

# Security Configuration
# = CRITICAL: Configure Content Security Policy
VITE_CSP_ENABLED=true
VITE_SECURE_COOKIES=true

# Development Tools (DEVELOPMENT ONLY)
# =¨ PRODUCTION: Set all to false or remove
VITE_SHOW_DEV_TOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

